root = true

[*]
indent_style = space

[*.csproj]
indent_size = 2

[*.cs]
indent_size = 4

# Formatting Rules
csharp_new_line_before_open_brace = all
csharp_new_line_before_else = true
csharp_indent_block_contents = true
csharp_indent_braces = false
csharp_space_after_dot = false
csharp_space_before_dot = false
csharp_preserve_single_line_statements = false

dotnet_diagnostic.IDE0055.severity = error

# Styling Rules
csharp_style_var_for_built_in_types = true
csharp_style_var_when_type_is_apparent = true
csharp_style_var_elsewhere = true

dotnet_diagnostic.IDE0007.severity = error

# Naming Rules
dotnet_naming_symbols.fufu_class.applicable_kinds = class

dotnet_naming_style.prefix_with_fufu.capitalization = pascal_case
dotnet_naming_style.prefix_with_fufu.required_prefix = Fufu

dotnet_naming_rule.class_must_start_with_fufu.symbols = fufu_class
dotnet_naming_rule.class_must_start_with_fufu.style = prefix_with_fufu
dotnet_naming_rule.class_must_start_with_fufu.severity = error

dotnet_diagnostic.IDE1006.severity = error

# Experimental Rules
dotnet_style_allow_multiple_blank_lines_experimental = false
dotnet_style_allow_statement_immediately_after_block_experimental = false
